	<name>zeidon</name>
	<modelVersion>4.0.0</modelVersion>
	<artifactId>zeidon</artifactId>
	<packaging>pom</packaging>
	<version>1.0.7-SNAPSHOT</version>
	<groupId>com.quinsoft.zeidon</groupId>

        <licenses>
	  <license>
	    <name>GNU LESSER GENERAL PUBLIC LICENSE</name>
	    <url>http://www.gnu.org/licenses/lgpl.txt</url>
	  </license>
	</licenses>

	<description>Parent to all Zeidon Java projects</description>

        <parent>
          <groupId>com.enservio.maven</groupId>
          <artifactId>company-pom</artifactId>
          <version>1.0.63-SNAPSHOT</version>
        </parent>

	<modules>
		<module>zeidon-joe</module>
		<module>object-browser</module>
		<module>zeidon-operations</module>
		<module>zeidon-tests</module>
		<module>zruby</module>
	</modules>

	<profiles>
	  <!-- The sinatra server only needs to be built once per release because
               it doesn't include any Zeidon code.  It is a convenience .jar for
               LOD servers.

               Build this with: mvn -P sinatra-server install
          -->
	  <profile>
	    <id>sinatra-server</id>
	    <modules>
	      <module>sinatra-server</module>
	    </modules> 
	  </profile>
	</profiles>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
</project>
